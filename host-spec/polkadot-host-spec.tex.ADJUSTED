    \begin{tmindent}
      \label{algo-pk-length}{\tmname{Partial-Key-Length-Encoding$\left(
      {\tmop{Head}_{N, 1}^{6 - 7}}  , \tmop{pk}_N \right)$}}
    \end{tmindent}
